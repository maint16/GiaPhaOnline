{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },

  // Serilog configuration.
  "serilog": {
    "writeTo": [
      {
        "name": "RollingFile",
        "args": {
          "pathFormat": "logs/log-{Date}.txt"
        }
      }
    ]
  },

  "emailCache": {
    "submitPasswordRequest": {
      "fileName": "Cache/Email/SubmitPasswordRequest.html",
      "isAbsolutePath": false,
      "isHtmlContent":  true 
    } 
  } 
}
